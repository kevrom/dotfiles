syntax on	" turn on syntax
set mouse=a	" enable mouse support if available
set tabstop=4
set shiftwidth=4
set showmatch
set incsearch
set ignorecase
set smartcase
set autoindent
set textwidth=79
set background=dark

filetype plugin indent on

set nocompatible
set modeline
set scrolljump=5

set undolevels=1000
set nowrap

set history=3000
set noexpandtab
set noruler
set noerrorbells visualbell t_vb=
set number

set scrolloff=3
set showcmd
set showfulltag
set showmode


